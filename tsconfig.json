{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es6",
    "target": "es2017",
    "strict": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "jest"
    ],
    "outDir": "target/js",
    "sourceMap": true,
    "newLine": "LF"
  },
  "include": [
    "src/**/*"
  ]
}
