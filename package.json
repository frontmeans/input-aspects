{
  "name": "@frontmeans/input-aspects",
  "version": "4.4.1",
  "description": "Controls various aspects of user input. Such as value conversion, form validation, etc.",
  "keywords": [
    "form-validation",
    "forms",
    "input",
    "input-validation"
  ],
  "homepage": "https://github.com/frontmeans/input-aspects",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:frontmeans/input-aspects.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/frontmeans/input-aspects/issues"
  },
  "type": "module",
  "main": "./dist/input-aspects.js",
  "types": "./index.d.ts",
  "exports": "./dist/input-aspects.js",
  "peerDependencies": {
    "@proc7ts/fun-events": "^10.5.1"
  },
  "dependencies": {
    "@frontmeans/dom-events": "^1.2.0",
    "@frontmeans/namespace-aliaser": "^2.6.2",
    "@frontmeans/render-scheduler": "^1.8.1",
    "@proc7ts/delta-set": "^1.5.0",
    "@proc7ts/primitives": "^3.0.2",
    "@proc7ts/push-iterator": "^3.1.0",
    "@proc7ts/supply": "^1.2.3"
  },
  "devDependencies": {
    "@jest/globals": "^28.1.0",
    "@proc7ts/fun-events": "^10.5.1",
    "@run-z/eslint-config": "^3.0.1",
    "@run-z/rollup-helpers": "^2.0.0",
    "@types/node": "^16.11.36",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.17.0",
    "eslint-plugin-jest": "^26.5.3",
    "gh-pages": "^4.0.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-junit": "^13.2.0",
    "jest-mock": "^28.1.0",
    "prettier": "^2.6.2",
    "rollup": "^2.75.5",
    "rollup-plugin-flat-dts": "^1.6.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.32.0",
    "run-z": "^1.10.0",
    "shx": "^0.3.4",
    "ts-jest": "^28.0.4",
    "tslib": "^2.4.0",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "typescript": "4.7"
      }
    }
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "build": "run-z +z --then rollup -c",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then shx rm -rf \"index.d.ts?(.map)\" dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "lint": "run-z +z --then eslint .",
    "format": "run-z +z --then prettier --write \"**/*.{json,md}\"",
    "test": "run-z +z env:NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" --then jest",
    "z": "run-z +cmd:rollup,+cmd:typedoc,+cmd:eslint,+cmd:jest"
  }
}
